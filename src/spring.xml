<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd" [
<!ENTITY contextInclude SYSTEM "org/springframework/web/context/WEB-INF/contextInclude.xml">
]>

<beans>
    
    <bean id="tri" class="org.java.Triangle" autowire="byName">
        
    </bean>

    <bean id="pointA" class="org.java.Point"> <!-- id must match with property name of Triangle Class "pointA" -->
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>
    
    <bean id="pointB" class="org.java.Point"> <!-- id must match with property name of Triangle Class "pointB"-->
        <property name="x" value="0"/>
        <property name="y" value="10"/>
    </bean>
    
    <bean id="pointC" class="org.java.Point"> <!-- id must match with property name of Triangle Class "pointC"-->
        <property name="x" value="10"/>
        <property name="y" value="10"/>
    </bean>
</beans>